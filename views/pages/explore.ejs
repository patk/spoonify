</section class="meal-plan">
    <div class="meal-plan-container">
        <div class="meal-plan-header">
            <h3>Meal Plan</h3>
            <select id="selectdiet" name="selectdiet">
                <option value="" disabled selected>Select diet type</option>
                <option value="">-</option>
                <option value="gluten free">Gluten Free</option>
                <option value="ketogenic">Ketogenic</option>
                <option value="vegetarian">Vegetarian</option>
                <option value="lacto-vegetarian">Lacto-Vegetarian</option>
                <option value="ovo-vegetarian">Ovo-Vegetarian</option>
                <option value="vegan">Vegan</option>
                <option value="pescetarian">Pescetarian</option>
                <option value="paleo">Paleo</option>
                <option value="primal">Primal</option>
                <option value="whole30">Whole30</option>
            </select>
        </div>
        <div class="meal-plan-content">
            <div class="meal-plan-meals">
                <div class="meal-container">
                  <h4>Breakfast</h4>
                  <div class = "meal-card">
                    <img id="breakfast-img">
                    <h5 id="meal-plan-breakfast"></h5>
                  </div>
                </div>
                <div class="meal-container">
                  <h4>Lunch</h4>
                  <div class = "meal-card">
                    <img id="lunch-img">
                    <h5 id="meal-plan-lunch"></h5>
                  </div>
                </div>
                <div class="meal-container">
                  <h4>Dinner</h4>
                  <div class = "meal-card">
                    <img id="dinner-img">
                    <h5 id="meal-plan-dinner"></h5>
                  </div>
                </div>
            </div>
            <span class="vertical-separator"></span>
            <div class="meal-plan-nutrition">
                <h4>Nutrition Facts</h4>
                <table>
                  <tr>
                    <td>Calories</td>
                    <td id="meal-plan-calories"></td>
                  </tr>
                  <tr>
                    <td>Protein</td>
                    <td id="meal-plan-protein"></td>
                  </tr>
                  <tr>
                    <td>Fat</td>
                    <td id="meal-plan-fat"></td>
                  </tr>
                  <tr>
                    <td>Carbohydrates</td>
                    <td id="meal-plan-carbs"></td>
                  </tr>
                </table>
            </div>
        </div>
  </div>
