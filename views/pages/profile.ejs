</section>

<section class="profile-content">
  <!-- statistic section -->
  <div class="summary-container">
    <h3>Statistics</h3>
    <div class="summary-content-container">
      <div id="cal-intake">
        <h4>Calories Intake</h4>
        <div id="calorieschart"></div>
      </div>
      <div id="nutrition-intake">
        <h4>Nutrition Intake</h4>
        <div id="nutritionchart"></div>
      </div>
    </div>
  </div>

  <!-- food diary section -->
  <div class="diary-container">
    <h3>Diary</h3>
    <div class="food-water-container">
      <div class="food-diary">
        <div class="diary-header">
          <h4>Food</h4>
          <button class="add-button">
            <i class="fa fa-plus" style="font-size: 15px"></i>
          </button>
        </div>
        <table>
          <tr>
            <td>Cereal</td>
            <td>230 kcal</td>
            <td>Breakfast</td>
          </tr>
          <tr>
            <td>Chicken fried rice</td>
            <td>540 kcal</td>
            <td>Lunch</td>
          </tr>
          <tr>
            <td>Grilled salmon</td>
            <td>420 kcal</td>
            <td>Dinner</td>
          </tr>
        </table>
      </div>
      <div class="water-diary">
        <div class="diary-header">
          <h4>Water</h4>
          <button class="add-button">
            <i class="fa fa-plus" style="font-size: 15px"></i>
          </button>
        </div>
        <div class="diary-content">
          <div id="waterchart"></div>
          <div class="diary-content-right">
            <div class="content-wrapper">
              <h5>Consumed</h5>
              <p>1.8 L</p>
            </div>
            <span class="horizontal-separator"></span>
            <div class="content-wrapper">
              <h5>Goal</h5>
              <p>2.5 L</p>
            </div>
          </div>
        </div>
      </div>
